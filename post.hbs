{{!< default}}
<main class="main" role="main">
{{#post}}

    <article class="post-article" role="article" itemscope itemtype="http://schema.org/Article">
      <header class="post-header">

        <h1 class="post-title mb-none" itemprop="headline">
            {{title}}
        </h1>

        <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">
          {{date format='dddd DD MMM YYYY'}}
        </time>

      </header>

    <div class="post-content" itemprop="articleBody">
        {{content}}
    </div>

    <hr />

    <!-- Toggle if you want tags + author section (I don't!) -->
    <!-- {{#if tags}}
        <div class="post-tags">
            Tags: {{tags separator=" | "}}
        </div>
    {{/if}}

    {{#if author}}
        <footer class="post-footer">
        </footer>
    {{/if}} -->

</article>

<!-- Only show next / prev if it's not a portfolio/work piece -->
{{^has tag="work"}}
    {{> next-previous}}
{{/has}}

{{/post}}


</main>
{{> footer}}
